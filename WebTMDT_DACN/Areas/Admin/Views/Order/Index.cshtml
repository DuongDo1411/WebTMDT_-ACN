@model IEnumerable<OrderModel>
@{
    ViewData["Title"] = "Order Management";
    Paginate paper = new Paginate();
    int pageNo = 0;
    if (ViewBag.paper != null)
    {
        paper = ViewBag.paper;
        pageNo = paper.CurrentPage;
    }
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<h3>DANH SÁCH ĐƠN HÀNG</h3>

<table class="table" id="myTable">
    <thead>
        <tr>
            <th scope="col">STT</th>
            <th scope="col">Mã đơn hàng</th>
            <th scope="col">Phí Ship</th>
            <th scope="col">Người đặt</th>
            <th scope="col">Thời gian đặt hàng</th>
            <th scope="col">Trạng thái đơn hàng</th>
            <th scope="col">Thao tác</th>

        </tr>
    </thead>
    <tbody>
        @{
            int i = (paper.CurrentPage - 1) * paper.PageSize + 1;
        }
        @foreach (var item in Model)
        {
            <tr>
                @* <th scope="row">@item.Id</th> *@
                <td>@i</td>
                <td>@item.OrderCode</td>
                <td>@item.ShippingCost.ToString("#,##0 VNĐ")</td>
                <td>@item.UserName</td>
                <td>@item.CreatedDate.ToString("dd/MM/yyyy HH:mm:ss")</td>
                <td>
                    <!-- ✅ SỬA LỖI LOGIC HIỂN THỊ TẠI ĐÂY -->
                    @if (item.Status == 1)
                    {
                        <span class="text text-success">Đơn hàng mới</span>
                    }
                    else if (item.Status == 0) // Sửa từ 2 thành 0
                    {
                        <span class="text text-info">Đã xử lý</span> <!-- Đổi màu cho dễ phân biệt -->
                    } 
                    else if (item.Status == 3) // Thêm check cho Status 3
                    {
                        <span class="text text-danger">Đã hủy</span>
                    }
                    else
                    {
                        <span class="text text-muted">Không rõ (@item.Status)</span>
                    }

                </td>
                <td width="120">
                    <a asp-action="ViewOrder" class="btn btn-warning btn-sm" asp-controller="Order" asp-route-ordercode="@item.OrderCode">Xem đơn hàng</a>
                    <a asp-action="Delete" class="btn btn-danger btn-sm confirmDeletion" asp-controller="Order" asp-route-ordercode="@item.OrderCode">Xóa đơn hàng</a>
                </td>

            </tr>
            { i++; }
        }

    </tbody>
</table>
    <partial name="_Paging" model="paper" />
</body>
</html>