@model IEnumerable<ProductModel>
@{
    ViewData["Title"] = "Product Management";
    Paginate paper = new Paginate();
    int pageNo = 0;
    if (ViewBag.paper != null)
    {
        paper = ViewBag.paper;
        pageNo = paper.CurrentPage;
    }

}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<h3>DANH SÁCH SẢN PHẨM</h3>
<a class="btn btn-primary" asp-action="Create" asp-controller="Product">THÊM SẢN PHẨM</a>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th scope="col">STT</th>
            <th scope="col">Tên sản phẩm</th>
            <th scope="col">Số lượng</th>
            <th scope="col">QL Số lượng</th>
            <th scope="col">Đã bán</th>
            <th scope="col">Mô tả</th>
            <th scope="col">Giá</th>
            <th scope="col">Hình ảnh</th>
            <th scope="col">Slug</th>
            <th scope="col">Loại sản phẩm</th>
            <th scope="col">Nhãn hiệu</th>
            <th scope="col">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = (paper.CurrentPage - 1) * paper.PageSize + 1;
        }
        @foreach(var item in Model)
        {
            <tr>
                @* <th scope="row">@item.Id</th> *@
                <td>@i</td>
                <td>@item.Name</td>
                <td>
                        @if (@item.Quantity == 0)
                        {
                            <span class="text text-danger"><b> @item.Quantity</b></span>
                        }
                        else
                        {
                            <span class="text text-primary"> @item.Quantity</span>
                        }

                </td>
                <td><a asp-controller="Product" asp-action="CreateProductQuantity" asp-route-Id="@item.Id">Thêm số lượng</a></td>
                <td>@item.Soldout</td>
                <td>@Html.Raw(item.Description)</td>
                    <td>@item.Price.ToString("#,##0 VNĐ")</td>
                <td>
                    <img src="~/media/products/@item.Image" width="120" height="150px">
                </td>
                <td>@item.Slug</td>
                <td>@item.Category.Name</td>
                <td>@item.Brand.Name</td>
                <td width="120">
                    <a asp-action="Edit" class="btn btn-warning btn-sm" asp-controller="Product" asp-route-Id="@item.Id">Sửa</a>
                    <a asp-action="Delete" class="btn btn-danger btn-sm confirmDeletion" asp-controller="Product" asp-route-Id="@item.Id">Xóa</a>
                </td>

            </tr>
            { i++; }
        }
        
    </tbody>
</table>
</body>

</html>