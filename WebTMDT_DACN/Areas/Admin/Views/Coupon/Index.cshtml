@model CouponModel;
@{
    ViewData["Title"] = "Tạo Mã Giảm Giá";
}

<style>
    .ck-editor__editable {
        min-height: 200px;
    }
</style>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Tạo Mã Giảm Giá Mới</h3>
    </div>
    <div class="panel-body">

        <form asp-action="Create" autocomplete="off" asp-controller="Coupon" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Name">Tên/Mã Giảm Giá (Coupon Code)</label>
                        <input asp-for="Name" class="form-control" placeholder="Vd: GIAMGIA10, SALEHE2025..." />
                        <span asp-validation-for="Name" class="text-danger" />
                    </div>
                </div>
            </div>

            <div class="row">
                
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Status">Trạng thái</label>
                        <select asp-for="Status" class="form-control">
                            <option value="1">Hiển thị (Kích hoạt)</option>
                            <option value="0">Ẩn (Chưa kích hoạt)</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Quantity">Số lượng</label>
                        <input asp-for="Quantity" class="form-control" type="number" min="1" />
                        <span asp-validation-for="Quantity" class="text-danger" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="DateStart">Ngày bắt đầu</label>
                        <input asp-for="DateStart" class="form-control" type="datetime-local" />
                        <span asp-validation-for="DateStart" class="text-danger" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="DateExpired">Ngày hết hạn</label>
                        <input asp-for="DateExpired" class="form-control" type="datetime-local" />
                        <span asp-validation-for="DateExpired" class="text-danger" />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Description">Mô tả (Điều kiện áp dụng)</label>
                        <textarea id="editor" asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger" />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-plus"></i> Create
                </button>
                <a asp-action="Index" asp-controller="Coupon" class="btn btn-default">
                    <i class="fa fa-arrow-left"></i> Quay lại Danh sách
                </a>
            </div>
        </form>
        <h5>Danh sách Coupon</h5>
        </h5>List Coupons</h5>
        <table class="table table-striped" id="myTable">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Date Started</th>
                    <th>Date Expired</th>
                    <th>Quantity</th>
                    <th>Active</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
                </tr>
            </thead>
            <tbody>
                @foreach (var coupon in ViewBag.Coupons)
                {
                    <tr>
                        <td>@coupon.Name</td>
                        <td>@Html.Raw(coupon.Description)</td>
                        <td>@coupon.DateStart.ToString("dd-MM-yyyy")</td>
                        <td>@coupon.DateExpired.ToString("dd-MM-yyyy")</td>
                        <td>@coupon.Quantity</td>
                        <td>
                            @if (coupon.Status == 1)
                            {
                                <select name="Status">
                                    <option selected value="1">Kích hoạt</option>
                                    <option value="0">Ẩn</option>
                                </select>
                            }
                            else
                            {
                                <select name="Status">
                                    <option value="1">Kích hoạt</option>
                                    <option selected value="0">Ẩn</option>
                                </select>
                            }
                        </td>
                        <td>
                            @if (coupon.DateExpired < DateTime.Now)
                            {
                                <span class="text text-danger">Expired</span>
                            }
                            else
                            {
                                TimeSpan remainingTime = coupon.DateExpired - DateTime.Now;
                                int daysRemaining = remainingTime.Days;
                                @if (daysRemaining == 0)
                                {
                                    <span class="text text-danger">Today</span>
                                }
                                else
                                {
                                    <span class="text text-success">@daysRemaining days left</span>
                                }
                            }
                        </td>
                        <td>
                            <a asp-action="Edit" asp-controller="Coupon" asp-route-id="@coupon.Id" class="btn btn-warning btn-sm">Sửa</a>
                            <a asp-action="Delete" asp-controller="Coupon" asp-route-id="@coupon.Id" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc muốn xóa coupon này?');">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://cdn.ckeditor.com/ckeditor5/40.1.0/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create( document.querySelector( '#editor' ) )
            .catch( error => {
                console.error( error );
            } );
    </script>
}