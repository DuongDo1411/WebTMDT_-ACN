@model IEnumerable<SliderModel>
@{
    ViewData["Title"] = "Slider Management";
    Paginate paper = new Paginate();
    int pageNo = 0;
    if (ViewBag.paper != null)
    {
        paper = ViewBag.paper;
        pageNo = paper.CurrentPage;
    }

}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h3>DANH SÁCH SLIDER</h3>
    <a class="btn btn-primary" asp-action="Create" asp-controller="Slider">THÊM SLIDER</a>
    <table class="table" id="myTable">
        <thead>
            <tr>
                <th scope="col">STT</th>
                <th scope="col">Tên slider</th>
                <th scope="col">Mô tả</th>
                <th scope="col">Ảnh Slider</th>
                <th scope="col">Trạng thái</th>
                <th scope="col">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = (paper.CurrentPage - 1) * paper.PageSize + 1;
            }
            @foreach (var item in Model)
            {
                <tr>
                    @* <th scope="row">@item.Id</th> *@
                    <td>@i</td>
                    <td>@item.Name</td>
                    <td>@Html.Raw(item.Description)</td>
                    <td>
                        <img src="~/media/sliders/@item.Image" width="350" height="150px">
                    </td>
                    <td>
                        @if (@item.Status == 1)
                        {
                            <span class="text text-success">Hiển thị</span>
                        }
                        else
                        {
                            <span class="text text-danger">Ẩn</span>
                        }

                    </td>
                    <td width="120">
                        <a asp-action="Edit" class="btn btn-warning btn-sm" asp-controller="Slider" asp-route-Id="@item.Id">Sửa</a>
                        <a asp-action="Delete" class="btn btn-danger btn-sm confirmDeletion" asp-controller="Slider" asp-route-Id="@item.Id">Xóa</a>
                    </td>

                </tr>
                { i++; }
            }

        </tbody>
    </table>
    <partial name="_Paging" model="paper" />
</body>
</html>