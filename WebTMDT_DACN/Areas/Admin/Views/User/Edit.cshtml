@model AppUserModel
@{
    ViewData["Title"] = "Edit User";
}
<h4>CHỈNH SỬA NHÂN VIÊN<h4>
        <div class="col-md-19">
            <form asp-action="Edit" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label>UserName</label>
                    <input asp-for="UserName" required class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger" />
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input asp-for="Email" required class="form-control" />
                    <span asp-validation-for="Email" class="text-danger" />
                </div>
                <div class="form-group">
                    <label>Số Điện Thoại</label>
                    <input asp-for="PhoneNumber" required class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger" />
                </div
                <div class="form-group">
                    <label>Mật Khẩu</label>
                    <input asp-for="PasswordHash" readonly required class="form-control" />
                    <span asp-validation-for="PasswordHash" class="text-danger" />
                </div>
                <div class="form-group">
                    <label asp-for="RoleId">Roles</label>
                    <select asp-for="RoleId" class="form-control" asp-items="ViewBag.Roles">
                    </select>
                    <span asp-validation-for="RoleId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary">Update</button>
                </div>
            </form>
            <a asp-action="Index">Back to List User</a>
        </div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
