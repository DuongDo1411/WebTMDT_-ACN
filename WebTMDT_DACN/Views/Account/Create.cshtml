@model UserModel
@{
    ViewData["Title"] = "Đăng ký";
}

<style>
    .register-page-section {
        background: #f9f9f9; /* Nền xám nhạt */
        padding: 60px 0; /* Tăng khoảng cách trên/dưới */
    }

    .register-form-container {
        background: #fff;
        padding: 40px;
        border-radius: 8px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

        .register-form-container h2 {
            text-align: center;
            color: #333;
            font-weight: 700;
            margin-bottom: 30px;
        }

    .form-group label {
        font-weight: 600;
        color: #555;
        margin-bottom: 8px;
    }

    /* Dùng input-group để thêm icon */
    .input-group {
        margin-bottom: 20px;
    }

    /* Style cho icon */
    .input-group-addon {
        background: #f7f7f7;
        border: 1px solid #ddd;
        border-right: none;
        color: var(--primary-color); /* Dùng màu cam chủ đạo */
        border-radius: 5px 0 0 5px;
        padding: 6px 15px; /* Thêm padding cho icon */
    }

    .input-group .form-control {
        border-radius: 0 5px 5px 0 !important;
        height: 45px; /* Tăng chiều cao input */
        box-shadow: none;
        border-color: #ddd;
    }

    .form-control:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 5px rgba(254, 152, 15, 0.5);
        z-index: 2;
    }

    /* Nút Đăng ký (Call-to-Action) */
    .btn-register {
        width: 100%;
        padding: 12px;
        font-size: 1.1rem;
        font-weight: 700;
        background: var(--primary-color);
        border: none;
        color: #fff;
        border-radius: 5px;
        transition: background 0.2s ease;
    }

        .btn-register:hover {
            background: #e6890e; /* Màu cam đậm hơn */
            color: #fff;
        }

    /* Link Đăng nhập */
    .login-link {
        text-align: center;
        margin-top: 25px;
        font-size: 1rem;
    }

        .login-link a {
            color: var(--primary-color);
            font-weight: 600;
        }

    /* Đảm bảo span lỗi nằm dưới input-group */
    .form-group .text-danger {
        display: block;
        margin-top: 5px;
    }
</style>

<section id="form" class="register-page-section">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">

                <div class="register-form-container">
                    <h2>Đăng ký tài khoản mới</h2>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <form asp-action="Create" asp-controller="Account">

                        <div class="form-group">
                            <label asp-for="Username">Tên đăng nhập</label>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                <input asp-for="Username" class="form-control" placeholder="Nhập tên đăng nhập" />
                            </div>
                            <span asp-validation-for="Username" class="text-danger" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Email">Email</label>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                                <input asp-for="Email" class="form-control" placeholder="Nhập email" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Password">Mật khẩu</label>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                                <input asp-for="Password" class="form-control" placeholder="Nhập mật khẩu" type="password" />
                            </div>
                            <span asp-validation-for="Password" class="text-danger" />
                        </div>

                        <button type="submit" class="btn btn-register">Đăng ký</button>
                    </form>

                    <div class="login-link">
                        Đã có tài khoản?
                        <a asp-action="Login" asp-controller="Account">Đăng nhập ngay</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}