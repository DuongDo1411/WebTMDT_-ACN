@model LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
}

<style>
    /* (CSS cũ của bạn từ dòng 5 đến 132) */
    .login-page-section {
        background: #f9f9f9;
        padding: 60px 0;
    }
    /* ... (giữ nguyên toàn bộ CSS của bạn) ... */
    .form-group .text-danger {
        display: block;
        margin-top: 5px;
    }

    /* ======================================== */
    /* ===== BẮT ĐẦU CSS CHO NÚT GOOGLE ===== */
    /* ======================================== */

    /* Thêm dải phân cách "Hoặc" */
    .external-login-divider {
        text-align: center;
        margin: 25px 0 20px 0; /* Tăng khoảng cách */
        position: relative;
    }

        .external-login-divider span {
            background: #fff; /* Phải khớp với nền .login-form-container */
            padding: 0 15px;
            position: relative;
            z-index: 2;
            color: #777;
            font-weight: 600;
        }

        .external-login-divider:before {
            content: "";
            display: block;
            width: 100%;
            height: 1px;
            background: #ddd; /* Màu đường kẻ */
            position: absolute;
            top: 50%;
            left: 0;
            z-index: 1;
        }

    /* Nút Google */
    .btn-google {
        width: 100%;
        padding: 12px;
        font-size: 1.05rem; /* Hơi nhỏ hơn nút chính 1 chút */
        font-weight: 700;
        background: #4285F4; /* Màu xanh Google */
        border: none;
        color: #fff;
        border-radius: 5px;
        transition: background 0.2s ease;
    }

        .btn-google:hover {
            background: #357ae8; /* Xanh đậm hơn */
            color: #fff;
        }

        /* Icon Google (nếu bạn dùng Font Awesome 5+) */
        /* Nếu bạn dùng FA 4, bạn có thể cần dùng <i class="fa fa-google"></i> */
        .btn-google .fa-google {
            margin-right: 10px;
        }

</style>

<section id="form" class="login-page-section">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">

                <div class="login-form-container">
                    <h2>Đăng nhập tài khoản</h2>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <form asp-action="Login" asp-controller="Account" method="post">

                        <div class="form-group">
                            <label asp-for="Username">Tên đăng nhập</label>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                <input asp-for="Username" class="form-control" placeholder="Nhập tên đăng nhập" />
                            </div>
                            <span asp-validation-for="Username" class="text-danger" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Password">Mật khẩu</label>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                                <input asp-for="Password" class="form-control" placeholder="Nhập mật khẩu" type="password" />
                            </div>
                            <span asp-validation-for="Password" class="text-danger" />
                        </div>

                        <div class="forgot-password-link">
                            <a asp-action="ForgetPass" asp-controller="Account">Quên mật khẩu?</a>
                        </div>

                        <button type="submit" class="btn btn-login">Đăng nhập</button>
                    </form>

                    @* <div class="external-login-divider">
                        <span>Hoặc đăng nhập bằng</span>
                    </div> *@

                    @* <form asp-action="LoginGoogle" asp-controller="Account" method="post">
                        <button type="submit" class="btn btn-google" name="provider" value="Google">
                            <i class="fa fa-google"></i> Đăng nhập bằng Google
                        </button>
                    </form> *@

                    <div class="register-link">
                        Chưa có tài khoản?
                        <a asp-action="Create" asp-controller="Account">Đăng ký ngay</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}